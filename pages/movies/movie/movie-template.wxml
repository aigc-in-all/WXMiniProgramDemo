<import src="../stars/stars-template.wxml" />

<template name="movieTemplate">
  <view class='movie-container' catchtap='onMovieTap' data-movieId='{{movieId}}'>
     <image class='movie-img' src='{{converageUrl}}'></image> 
    <!-- <image class='movie-img' src='http://img3.doubanio.com/view/photo/s_ratio_poster/public/p2503997609.webp'></image> -->
    <text class='movie-title'>{{title}}</text>
    <template is="starsTemplate" data="{{stars: stars, score: average}}" />
  </view>
</template>